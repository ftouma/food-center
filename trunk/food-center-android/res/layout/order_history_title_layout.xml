<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator" >

    <!--  group devidever -->
    <ImageView
        android:id="@+id/order_history_title_rest_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" 
        android:contentDescription="@string/default_desc"/>

    <ImageView
        android:id="@+id/order_history_title_service_img"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:background="@drawable/delivery" 
        android:contentDescription="@string/default_desc"/>
    
    <TextView
        android:id="@+id/order_history_title_rest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_history_title_service_img"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="5sp"
        android:text="@string/rest_info_header"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/order_history_title_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:clickable="false"
        android:focusable="false"
        android:paddingRight="5sp"
        android:text="@string/course_price"
        android:textSize="16sp"
        android:textStyle="bold|italic" >
    </TextView>

    <TextView
        android:id="@+id/order_history_title_order_date"
        android:layout_width="wrap_content"
        android:layout_height="15sp"
        android:layout_below="@id/order_history_title_rest_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="65sp"
        android:text="@string/order_order_date"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_history_title_delivery_date"
        android:layout_width="wrap_content"
        android:layout_height="15sp"
        android:layout_below="@id/order_history_title_rest_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"        
        android:gravity="left"
        android:text="@string/order_order_delivery_date"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/order_history_title_rest_branch_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_history_title_order_date"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginTop="1sp"
        android:layout_marginLeft="30sp"
        android:maxLines="2"
        android:text="@string/branch_location_addr"
        android:textSize="12sp"
        android:textStyle="italic" />
    
    
</RelativeLayout>